@model Website.Models.Department

@{
    ViewData["Title"] = "CreateDepartment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <h1 class="page-header">
        Chào Mừng đến với Trang Admin
        <!-- <small>
        </small> -->
    </h1>
<hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateDepartment" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DepartmentStrucId" class="control-label">Thuộc Phòng Ban</label>
                    <select asp-for="DepartmentStrucId" class="form-control">
                        <option value="">Chọn Phòng Ban</option>
                        @if (ViewBag.DepartmentStructure != null && ViewBag.DepartmentStructure.Count > 0)
                        {
                            @foreach (var item in ViewBag.DepartmentStructure)
                            {
                                <option value="@item.StructureId">@item.StructureName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="DepartmentStrucId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentJobTitle" class="control-label">Chức Danh</label>
                    <input asp-for="DepartmentJobTitle" class="form-control" />
                    <span asp-validation-for="DepartmentJobTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentName" class="control-label">Họ và Tên</label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentPhone" class="control-label">Số Điện Thoại</label>
                    <input asp-for="DepartmentPhone" class="form-control" />
                    <span asp-validation-for="DepartmentPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentEmail" class="control-label">Email</label>
                    <input asp-for="DepartmentEmail" class="form-control" />
                    <span asp-validation-for="DepartmentEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentImage" class="control-label">Hình Ảnh</label>
                    <input asp-for="DepartmentImage" class="form-control" type="file" name="fileImage" />
                    <span asp-validation-for="DepartmentImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentDescrip" class="control-label">Mô tả(Nêú có)</label>
                    <input asp-for="DepartmentDescrip" class="form-control" />
                    <span asp-validation-for="DepartmentDescrip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>