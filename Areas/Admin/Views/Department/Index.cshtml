@model IEnumerable<Website.Models.Structure>
@{
    ViewData["Title"] = "Phòng Ban";
}

<div id="page-wrapper">
    <h1 class="page-header">
        Chào Mừng đến với Trang Admin
        <!-- <small>
        </small> -->
    </h1>

    <div class="row">
        <div class="col-xs-6">
            <form action="" method="post" >
                <div class="form-group">
                    <label for="StructureName">Thêm Phòng Ban</label>
                    <input class="form-control" type="text" name="StructureName">
                </div>
                <div class="form-group">
                    <input class="btn btn-outline-danger" type="submit" value="Add Phòng Ban">
                </div>
            </form>
        </div>
        <div class="col-xs-6">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Phòng Ban</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in ViewBag.Structure)
                        {
                    <tr>
                        <td>@item.StructureId</td>    
                        <td>@item.StructureName</td>
                        <td>
                            <form method="post" onsubmit="return confirm('Are you sure you want to delete?')" action="~/Admin/Department/DeleteStructure">
                                <input type="hidden" name="structure" value="@item.StructureId" />
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        

    </div>
</div>

