@model Website.Models.Product

@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <h1 class="page-header">
        Chào Mừng đến với Trang Admin
        <!-- <small>
        </small> -->
    </h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <input asp-for="ProductId" class="form-control" readonly/>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductTitle" class="control-label"></label>
                    <input asp-for="ProductTitle" class="form-control" />
                    <span asp-validation-for="ProductTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductAuthor" class="control-label"></label>
                    <input asp-for="ProductAuthor" class="form-control" />
                    <span asp-validation-for="ProductAuthor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" for="imagePreview" class="control-label">Hình Ảnh Hiện Tại:</label>
                    <img id="imagePreview" src="~/img/@Model.ProductImage" alt="Current Image" style="max-width: 200px; height: auto;" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label">Hình ảnh Mới</label>
                    <input asp-for="ProductImage" class="form-control" type="file" name="fileImage" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductStatus" class="control-label"></label>
                    <select asp-for="ProductStatus" class="form-control">
                        <option value="">Chọn Tình Trạng</option>
                        <option value="active">Active</option>
                        <option value="inactive">InActive</option>
                        <!-- Thêm các option khác nếu cần -->
                    </select>
                    <span asp-validation-for="ProductStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductReleaseDate" class="control-label"></label>
                    <input asp-for="ProductReleaseDate" class="form-control" />
                    <span asp-validation-for="ProductReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <textarea id="inputContent" asp-for="ProductDescription" class="form-control"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>

@section Scripts
                    {
    <script>

        var inputElement = document.getElementById('inputContent');

        if (inputElement) {
            CKEDITOR.replace('inputContent');
        } else {
            console.error("Không tìm thấy phần tử 'inputContent' trong DOM.");
        }

        function openCKFinder() {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                // Hành động khi file được chọn
                console.log(fileUrl); // In ra đường dẫn file đã chọn để kiểm tra
            };
            finder.popup();
        }
    </script>
}