@using Website.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">

    <title>@ViewData["Title"] - Website</title>

    <!-- Bootstrap Core CSS Admin -->
    <link href="~/css_admin/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css_admin/sb-admin.css" rel="stylesheet">
    <link href="~/css_admin/styles.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/js/jquery.js"></script>

    
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

</head>

<body>
    <div id="wrapper">
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Admin">Quản Lí</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li><a href="">Users Online: <span class="usersonline"></span></a></li>
                <li> <a href="~/Home">User Home</a> </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i> <b class="caret"></b></a>
                    <ul class="dropdown-menu message-dropdown">
                        @if (ViewBag.Contact != null)
                            {
                                @foreach (var item in ViewBag.Contact)
                                {
                                    <li class="message-preview">
                                        <a href="#">
                                            <div class="media">

                                                <div class="media-body">
                                                    <h5 class="media-heading">
                                                        <strong>@item.UserNameContact</strong>
                                                    </h5>
                                                    <p class="small text-muted"><i class="fa fa-clock-o"></i> @item.ContactDate</p>
                                                    <p>Email: @item.UserEmailContact</p>
                                                    <p class="two-line-text">@item.ContentContact</p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            }
                        <li class="message-footer">
                            <a href="#">Read All New Messages</a>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user"></i>
                            @if (User.Identity.IsAuthenticated )
                            {
                                <span> @User.FindFirst("UserFirstName")?.Value</span>
                            }
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="~/Admin/Profile"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                                <a href="@Url.Action("Logout", "Auth", new { area = "Admin" })"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="~/Admin/HomeAdmin"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="bootstrap-elements.html"><i class="fa fa-fw fa-desktop"></i> Bootstrap Elements</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i style="margin-right: 5px;" class="fa fa-newspaper-o"></i> Bản Tin <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapse">
                            <li>
                                <a href="~/Admin/HomeAdmin">Quản lí Bài Đăng</a>
                            </li>
                            <li>
                                <a href="~/Admin/HomeAdmin/CreateNews">Thêm Bài Đăng</a>
                            </li>
                            <li>
                                <a href="~/Admin/HomeAdmin/CreateNewsCategory">Thêm Danh Mục</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#phong-ban"><i class="fa fa-fw fa-arrows-v"></i> Phòng Ban <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="phong-ban" class="collapse">
                            <li>
                                <a href="~/Admin/Department">Tất cả phòng ban</a>
                            </li>
                            <li>
                                <a href="~/Admin/Department/ViewAllDepartment">Tất cả Thành viên</a>
                            </li>
                            <li>
                                <a href="~/Admin/Department/CreateDepartment">Thêm thành viên</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                            <a href="javascript:;" data-toggle="collapse" data-target="#noti"><i style="margin-right: 5px;" class="fa fa-bell-o"></i> Dịch Vụ <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="noti" class="collapse">
                            <li>
                                <a href="~/Admin/Product">Quản Lí SP/DV</a>
                            </li>
                            <li>
                                <a href="~/Admin/Product/CreateProduct">Thêm SP/DV mới</a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="~/Admin/Comment"><i class="fa fa-fw fa-file"></i> Comment</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#user"><i class="fa fa-fw fa-arrows-v"></i> Người Dùng <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="user" class="collapse">
                            <li>
                                 <a href="~/Admin/User">Quản Lý Người Dùng</a>
                            </li>
                            <li>
                                <a href="~/Admin/User/CreateUser">Thêm người dùng</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="~/Admin/Profile"><i class="fa fa-fw fa-dashboard"></i> Profile</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    </div>
    <!-- jQuery -->
    <script src="~/js/jquery.js"></script>
    <script src="~/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="~/assets/plugin/ckeditor/ckeditor.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
