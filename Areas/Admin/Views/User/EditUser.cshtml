@model Website.Models.User

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <h1 class="page-header">
        Chào Mừng đến với Trang Admin
        <!-- <small>
        </small> -->
    </h1>
<hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Id</label>
                    <input asp-for="UserId" class="form-control" readonly/>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Email người dùng / Tên Đăng Nhập</label>
                    <input asp-for="UserName" class="form-control" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserFirstName" class="control-label">Họ</label>
                    <input asp-for="UserFirstName" class="form-control" readonly />
                    <span asp-validation-for="UserFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserLastName" class="control-label">Tên</label>
                    <input asp-for="UserLastName" class="form-control" readonly />
                    <span asp-validation-for="UserLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserImage" for="imagePreview" class="control-label">Hình Ảnh Hiện Tại:</label>
                    <img id="imagePreview" src="~/img/@Model.UserImage" alt="Current Image" style="max-width: 200px; height: auto;" />
                </div>
                <div class="form-group">
                    <label asp-for="UserImage" class="control-label">Hình ảnh Mới</label>
                    <input asp-for="UserImage" class="form-control" type="file" name="fileImage" />
                    <span asp-validation-for="UserImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserRole" class="control-label"></label>
                    <select asp-for="UserRole" class="form-control">
                        <option value="">Chọn Quyền</option>
                        <option value="user">Người Dùng</option>
                        <option value="admin">Quản Lý</option>
                        <!-- Thêm các option khác nếu cần -->
                    </select>
                    <span asp-validation-for="UserRole" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Quay về</a>
    </div>

</div>