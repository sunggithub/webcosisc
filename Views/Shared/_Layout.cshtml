<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>@ViewData["Title"] - Website</title>
    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <link rel="stylesheet" href="~/assets/vendor/animate/animate.css">
    <link rel="stylesheet" href="~/assets/css/theme.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/css/maicons.css">
    <link rel="stylesheet" href="~/assets/vendor/owl-carousel/css/owl.carousel.css">
    
    

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Website.styles.css" asp-append-version="true" />

    
</head>
<body>
    <header >
        <nav id="header" class="navbar navbar-expand-lg navbar-light navbar-float">
            <div class="container">
                <a href="~/Home" class="navbar-brand">Co<span class="text-danger">Sis2</span></a>

                <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarContent">
                    <ul class="navbar-nav ml-lg-4 pt-3 pt-lg-0">
                        <li class="nav-item active">
                            <a href="~/Home" class="nav-link text-danger">Trang chủ</a>
                        </li>
                        <li class="nav-item ">
                            <a href="~/About" class="nav-link">Về chúng tôi</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Service" class="nav-link">Dịch vụ</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Blog" class="nav-link">Tin tức</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Contact" class="nav-link">Liên Hệ</a>
                        </li>
                    </ul>

                    <div class="ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown list-unstyled">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-user"></i>
                                    <span> @User.FindFirst("UserFirstName")?.Value</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a style="margin: 5px" href="@Url.Action("Logout", "Auth", new { area = "Admin" })"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                                    </li>
                                </ul>
                            </li>
                        }else
                        {
                            <a href="~/Admin/Auth/Login" class="btn btn-outline rounded-pill">Đăng Nhập</a>
                        }
                        
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="page-footer">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-3 py-3">
                    <h3>Co<span class="text-danger">Sis2.</span></h3>
                    <p>Trung Tâm Tin học Thống Kê khu vực II.</p>

                    <p><a href="#">cosis2@mail.com</a></p>
                    <p><a href="#">028 3551 5431</a></p>
                </div>
                <div class="col-lg-3 py-3">
                    <h5>Links Nhanh</h5>
                    <ul class="footer-menu">
                        <li><a href="#">How it works</a></li>
                        <li><a href="#">Security</a></li>
                        <li><a href="~/Service">Dịch Vụ/Sản phẩm</a></li>
                        <li><a href="#">Resources</a></li>
                        <li><a href="mailto:cosis2@gmail.com">Report a Bug</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 py-3">
                    <h5>Về chúng tôi</h5>
                    <ul class="footer-menu">
                        <li><a href="~/About">Về Chúng tôi</a></li>
                        <li><a href="#">Cơ hội việc làm</a></li>
                        <li><a href="~/About/Introduction">Giới thiệu</a></li>
                        <li><a href="#">Phản hồi</a></li>
                        <li><a href="~/Blog">Tin tức</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 py-3">
                    <h5>Theo Dõi</h5>
                    <form action="#">
                        <input type="text" class="form-control" placeholder="Enter your mail~">
                    </form>

                    <div class="sosmed-button mt-4">
                        <a href="#"><span class="mai-logo-facebook-f"></span></a>
                        <a href="#"><span class="mai-logo-twitter"></span></a>
                        <a href="#"><span class="mai-logo-google"></span></a>
                        <a href="#"><span class="mai-logo-linkedin"></span></a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 py-2">
                    <p id="copyright">&copy; 2023 <a href="\">Cosis2</a>. All rights reserved</p>
                </div>
                <div class="col-sm-6 py-2 text-right">
                    <div class="d-inline-block px-3">
                        <a href="#">Quyền riêng tư</a>
                    </div>
                    <div class="d-inline-block px-3">
                        <a href="~/Contact">Liên hệ với Cosis2</a>
                    </div>
                </div>
            </div>
        </div> <!-- .container -->
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/wow/wow.min.js"></script>
    <script src="~/assets/vendor/owl-carousel/js/owl.carousel.min.js"></script>
    <script src="~/assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/assets/vendor/animateNumber/jquery.animateNumber.min.js"></script>
    <script src="~/assets/js/google-maps.js"></script>
    <script src="~/assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="~/assets/plugin/ckeditor/ckeditor.js"></script>

    <script src="~/assets/js/theme.js"></script>

    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
